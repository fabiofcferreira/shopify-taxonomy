{
  "private": true,
  "name": "shopify-taxonomy",
  "version": "0.0.0",
  "description": "Shopify Taxonomy client to get taxonomy details without API access",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": "git@github.com:fabiofcferreira/shopify-taxonomy.git",
  "author": "FÃ¡bio Ferreira <ffcfpten@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "./packages/en",
    "./packages/da",
    "./packages/de",
    "./packages/es",
    "./packages/fi",
    "./packages/fr",
    "./packages/it",
    "./packages/ja",
    "./packages/ko",
    "./packages/nl",
    "./packages/pl",
    "./packages/pt-PT",
    "./packages/pt-BR",
    "./packages/zh-CN"
  ],
  "scripts": {
    "scripts:minify:taxonomy": "yarn tsx ./scripts/cleanCategories",
    "scripts:update:readmes": "yarn tsx ./scripts/updateReadmes",
    "prebuild": "rimraf dist",
    "build": "yarn wsrun build",
    "packages:prepublish": "yarn wsrun version --no-git-tag-version --no-commit-hooks --new-version",
    "packages:publish": "yarn wsrun publish",
    "lint": "eslint --fix",
    "lint:diff": "eslint",
    "format": "yarn prettier -w ./packages",
    "format:check": "yarn prettier -l ./packages",
    "test": "jest --passWithNoTests",
    "prepare": "husky"
  },
  "dependencies": {
    "shopify-taxonomy-core": "^1.1.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.8.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.3",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.18.0",
    "wsrun": "^5.2.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint",
      "yarn format"
    ],
    "docs/*.md": [
      "yarn format"
    ],
    "guides/*.md": [
      "yarn format"
    ]
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
